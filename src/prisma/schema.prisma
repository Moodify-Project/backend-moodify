generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model User {
  email String @id
  username  String
  password String
  name String?
  gender gender_type?
  country String?
  urlphoto String?
  journal Journal[]
}

enum gender_type {
  male 
  female
  secret
}

model Journal {
  user        User     @relation(fields: [emailAuthor], references: [email])
  emailAuthor String
  journalId   String   @unique @id
  content     String   @db.LongText
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  isPredicted Boolean
  moods MoodOnJournal[]
}

model Mood {
  id Int @unique @id @default(autoincrement())
  moodName String
  journals MoodOnJournal[]
}

model MoodOnJournal {
  mood Mood @relation(fields: [moodId], references: [id])
  moodId Int
  journal Journal @relation(fields: [journalId], references: [journalId])
  journalId String
  percentage Int

  @@id([moodId, journalId])
}