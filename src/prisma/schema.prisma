generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model User {
  email String @id
  username  String
  password String
  name String?
  gender gender_type?
  country String?
  urlphoto String?
  journal Journal[]
}

enum gender_type {
  male 
  female
  secret
}

model Journal {
  user        User     @relation(fields: [emailAuthor], references: [email])
  emailAuthor String
  journalId   String   @unique @id
  content     String   @db.LongText
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}
