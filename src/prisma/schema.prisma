generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model User {
  email String @id
  username  String
  password String
  name String?
  gender gender_type?
  country String?
  urlphoto String?

  journal Journal[]
  articles UserBookmarkArticle[]
}

enum gender_type {
  male 
  female
  secret
}

model Journal {
  user        User     @relation(fields: [emailAuthor], references: [email])
  emailAuthor String
  journalId   String   @unique @id
  content     String   @db.LongText
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  isPredicted Boolean

  moods MoodOnJournal[]
}

model Mood {
  id Int @unique @id @default(autoincrement())
  moodName String

  journals MoodOnJournal[]
}

model MoodOnJournal {
  mood Mood @relation(fields: [moodId], references: [id])
  moodId Int
  journal Journal @relation(fields: [journalId], references: [journalId])
  journalId String
  percentage Int

  @@id([moodId, journalId])
}

model Article {
  id String @id
  source String
  author String
  title String
  description String
  url String
  urlToImage String
  publishedAt DateTime
  content String

  users UserBookmarkArticle[]
}

model UserBookmarkArticle {
  user User @relation(fields: [emailUser], references: [email])
  emailUser String
  article Article @relation(fields: [articleId], references: [id])
  articleId String

  @@id([articleId, emailUser])
}